<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h1>Create new account</h1>
            </div>
            <img src="/img/main.PNG" class="mx-auto d-block m-4 logo" alt="Logo">
            <div class="card-body">
                <form action="/auth/register" method="POST">
                    <div class="form-group">
                        <input type="name" name="name" placeholder="Name" class="form-control" value="{{name}}" required/>
                    </div>
                    <div class="form-group">
                        <input type="lastname" name="lastname" placeholder="Last Name" class="form-control" value="{{lastname}}" required/>
                    </div>
                    <div class="form-group">
                        <input type="email" name="email" placeholder="Email" class="form-control" value="{{email}}" required/>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" placeholder="Password" class="form-control" value="{{password}}" required/>
                    </div>
                    <div class="form-group">
                        <input type="text" name="phone" placeholder="Phone" class="form-control" value={{phone}}>
                    </div>
                    <div class="form-group">
                        <input type="date" name="birthDate" placeholder="Birtdate" class="form-control" value="{{birthDate}}">
                    </div>
                    <div class="form-group">
                        <input type="text" name="gender" placeholder="Gender" class="form-control" value="{{gender}}">
                    </div>
                    <div class="form-group">
                        <input type="text" name="maritalStatus" placeholder="Marital Status" class="form-control" value="{{maritalStatus}}">
                    </div>
                    <div class="form-group">
                        <input type="text" name="degree" placeholder="Degree" class="form-control" value="{{degree}}">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">
                            Sign Up
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>